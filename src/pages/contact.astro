---
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";

let contacts = [
	{
		title: "Chance Software LLC",
		email: "support@chancesoftwarellc.com",
	},
	{
		title: "Blazed Cloud",
		email: "support@blazedcloud.com",
	},
	{
		title: "Chance Tracker",
		email: "support@chancetracker.com",
	},
];
---

<Layout title="Contact">
	<Container>
		<Sectionhead>
			<Fragment slot="title">Contact</Fragment>
			<Fragment slot="desc">Get in Touch.</Fragment>
		</Sectionhead>

		<div class="py-24 sm:py-32">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto max-w-2xl space-y-16 divide-y divide-gray-100 lg:mx-0 lg:max-w-none">
					<div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:col-span-2 lg:gap-8 span flex align-middle">
						{
							contacts.map((item) => (
								<div class="rounded-2xl bg-stone-800 p-10">
									<h3 class="font-semibold leading-7 text-white text-xl">{item.title}</h3>
									<dl class="mt-3 space-y-1 text-sm leading-6 text-white">
										<div>
											<dt class="sr-only">Email</dt>
											<dd>
												<a class="font-semibold text-white" href="mailto:collaborate@example.com">
													{item.email}
												</a>
											</dd>
										</div>
										{item.phone && (
											<div class="mt-1">
												<dt class="sr-only">Phone number</dt>
												<dd>{item.phone}</dd>
											</div>
										)}
									</dl>
								</div>
							))
						}
					</div>
				</div>
			</div>
		</div>
	</Container>
</Layout>
