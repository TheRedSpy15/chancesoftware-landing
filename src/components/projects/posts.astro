---
export interface Props {
	posts: Array<any>;
}

const { posts } = Astro.props;
---

<section class="mx-auto max-w-7xl">
	<div class="mx-auto mt-16 grid max-w-2xl auto-rows-fr grid-cols-1 gap-12 sm:mt-24 lg:mx-0 lg:max-w-none lg:grid-cols-2">
		{
			posts.map((projectPostEntry, index) => (
				<article class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-stone-950 px-8 pb-8 pt-32 sm:pt-64 lg:pt-30">
					<img
						src={projectPostEntry.data.image.src}
						alt={projectPostEntry.data.image.alt}
						class="absolute inset-0 -z-10 h-full w-full object-cover"
					/>
					<div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40" />
					<div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10" />

					<h3 class="mt-3 text-lg font-semibold leading-6 text-white">
						<a
							href={
								projectPostEntry.data.homepage !== "/"
									? projectPostEntry.data.homepage
									: `${`projects/${projectPostEntry.slug.split("/").slice(1).join("/")}`}`
							}>
							<span class="absolute inset-0" />
							{projectPostEntry.data.title}
						</a>
					</h3>
				</article>
			))
		}
	</div>
</section>
