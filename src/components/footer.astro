---
import { menuitems } from "@components/navbar/navbar.astro";
---

<footer class="pb-12 pt-28 bg-stone-950">
	<div class="mx-auto max-w-6xl px-6 md:px-12 lg:px-6 xl:px-0">
		<ul role="list" class="flex flex-wrap items-center justify-center gap-4 py-4 text-white sm:gap-8">
			<li role="listitem">
				<a href="/" class="duration-300 hover:text-gray-100">Home</a>
			</li>
			{
				menuitems.map(
					(item) =>
						item &&
						item.path && (
							<li role="listitem">
								<a href={item.path} class="duration-300 hover:text-gray-100">
									{item.title}
								</a>
							</li>
						),
				)
			}
		</ul>
	</div>
</footer>
